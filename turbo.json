{
  "$schema": "https://turbo.build/schema.json",

  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "BASE_URL",
        "POSTGRES_PRISMA_URL",
        "BACKEND_PORT",
        "BACKEND_HOST",
        "AUTH0_SECRET",
        "AUTH0_BASE_URL",
        "AUTH0_ISSUER_BASE_URL",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "TEST_USER"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "tsc": {
      "cache": false
    },
    "test:ci": {
      "cache": false
    }
  }
}
