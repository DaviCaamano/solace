{
  "name": "solace",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen": "prisma generate",
    "migrate": "cross-env dotenv -e .env prisma migrate dev && prisma generate",
    "full-build": "cross-env yarn && yarn run migrate && yarn run gen && yarn run build",
    "start": "turbo run start --parallel"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "turbo": "^1.10.16"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "prisma": {
    "schema": "./apps/api/prisma/schema.prisma",
    "migrations": {
      "path": "./apps/api/prisma/migrations"
    }
  }
}
