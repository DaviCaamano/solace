// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id                                        String                  @id @default(uuid())
    zeroId                                    String                  @unique
    email                                     String                  @unique
    name                                      String?
    nickname                                  String?
    picture                                   String?

    Notes                                     Note[]
}

model Note {
    id                                        String                  @id @default(uuid())
    title                                     String
    content                                   String?
    userId                                    String
    parentId                                  String?

    status                                    NoteStatus
    createdAt                                 DateTime?               @default(now()) @ignore
    updatedAt                                 DateTime?               @updatedAt @ignore

    User                                      User                    @relation(fields: [userId], references: [id])
    Parent                                    Note?                   @relation("parent", fields: [parentId], references: [id])
    Children                                  Note[]                  @relation("parent")
}

enum NoteStatus {
  ACTIVE
  DELETED
}
