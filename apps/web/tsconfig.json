{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "src",
    "pages",
    "next-env.d.ts",
    "../../packages/shared/types/global.d.ts",
    "jest.config.ts",
    "jest.setup.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["**/node_modules", "node_modules"]
}
